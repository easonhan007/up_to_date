<div class="row">
  <div class="col-md-8">
    <%= render @post %>
  </div>
  <div class="col-md-3 my-2 offset-md-1">
    <%= render partial: 'api_records', locals: {api_records: @post.api_call_records.order('created_at DESC') } %> 

    <h6>Related Posts</h6>
    <%= render partial: 'shared/post_list', locals: {posts: @post.crawler_setting.posts.recent } %> 
  </div>
  <% if current_user and current_user.is_admin? %>
    <div class="my-4 row">
      <div class="col">
        <%= link_to "Edit this post", edit_post_path(@post), class: 'btn btn-primary' %> 
      </div>
      <div class="col">
        <%= link_to "Back to posts", posts_path, class: 'btn btn-secondary' %>
      </div>
      <div class="col">
        <%= button_to "Destroy this post", @post, method: :delete, class: 'btn btn-danger' %>
      </div>

    </div>
    
  <% end %>
</div>