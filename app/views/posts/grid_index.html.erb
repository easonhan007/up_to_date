<% @posts.in_groups_of(4).each do |post_list| %>
<div class="row my-4">
    <% post_list.each do |post| %>
        <div class="col-12 col-md-3 p-1">
            <%= render partial: 'grid', locals: {post: post} %>
        </div>
    <% end #each%>
</div>
<% end %>
<div class="my-4 d-flex justify-content-center col-12">
  <%== pagy_bootstrap_nav(@pagy) %>
</div>    