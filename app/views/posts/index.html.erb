<div class="row">
  <div class="col-md-10">
    <h3 class="my-2">Posts</h3>
    <table class="table">
      <thead>
        <th>title</th>
        <th>from</th>
      </thead>
      <tbody>
        <% @posts.each do |post|%>
          <tr>
            <td style="font-size:1.2em"><%= link_to post.title.truncate(60), post_path(post)%></td>
            <td><%= post.from.truncate 20 %></td>
          </tr>   
        <% end %>
      </tbody>
    </table>

    <%= link_to "New post", new_post_path %>
  </div>
</div>