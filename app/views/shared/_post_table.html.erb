<div class="my-2">
    <table class="table">
        <tbody>
            <% posts.each do |post| %>
                <tr>
                    <td><%= link_to post.title, post, style:"text-decoration: none;font-size:1.1em;"%></td>
                    <td class="text text-secondary"><%= time_ago_in_words post.updated_at %> ago </td>
                </tr>
            <% end %>
        </tbody>
    </table>

    <div class="mb-2">
      <%== pagy_bootstrap_nav(pagy) %>
    </div>    
</div>