<div class="row">
    <div class="col-12 col-md-6">
    <h5 class="text-center">Crawlers</h5>
        <table class="table">
            <% @crawlers.each do |c|%>
                <tr>
                    <td><%= link_to c.name, c%></td>
                    <td><%= link_to "Scrape", scrape_crawler_setting_path(c), class: 'btn btn-success btn-sm' %></td>
                </tr>
            <% end %>
        </table>
    </div>

    <div class="col-md-6 col-lg-4">
    <h5 class="text-center">Crawler Records</h5>
        <table class="table">
            <% @crawler_records.each do |r|%>
                <tr>
                    <td><%= link_to r.crawler_setting.name, r.crawler_setting %></td>
                    <td>✅ <%= r.success %></td>
                    <td>❌ <%= r.failed %></td>
                    <td title="<%= r.created_at.to_fs(:short)%>">
                        ⏱️ <%= link_to time_ago_in_words(r.created_at), r, style: 'text-decoration:none'%> ago
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
</div>

<% @posts.in_groups_of(4).each do |post_list|%>
    <div class="row my-4">
        <% post_list.each do |post| %>
            <div class="col-12 col-md-3 p-1">
                <%= render partial: 'posts/grid', locals: {post: post} %> 
            </div>
        <% end %>
    </div>
<% end %>