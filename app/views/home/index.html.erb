<div class="row">
    <div class="col-12 col-md-6">
    <h5 class="text-center">Crawlers</h5>
        <table class="table">
            <% @crawlers.each do |c|%>
                <tr>
                    <td><%= link_to c.name, c%></td>
                    <td><%= link_to "Scrape", scrape_crawler_setting_path(c), class: 'btn btn-success btn-sm' %></td>
                </tr>
            <% end %>
        </table>
    </div>

    <div class="col-md-6 col-lg-4">
    <h5 class="text-center">Crawler Records</h5>
        <table class="table">
            <% @crawler_records.each do |r|%>
                <tr>
                    <td title="<%= r.created_at.to_fs(:short)%>">
                        <%= link_to r.crawler_setting.name, r.crawler_setting %>
                    </td>
                    <td>✅ <%= link_to r.success || 0, r, class: "text-decoration-none" %></td>
                    <td>❌ <%= link_to r.failed || 0, r, class: "text-decoration-none" %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>

<%= render partial: 'posts/post_list', locals: {need_pagy: false, posts: @posts} %>
