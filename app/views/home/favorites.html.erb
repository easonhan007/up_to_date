<% @favorites.in_groups_of(4).each do |post_list| %>
	<div class="row my-4">
		<% post_list.each do |post| %>
			<% if post %>
				<div class="col-12 col-md-3">
					<%= render partial: 'posts/grid', locals: {post: post} %>
				</div>	
			<% end %>
		<% end %>
	</div>
<% end %>

<div class="my-5 flex justify-content-center">
	<%== pagy_bootstrap_nav(@pagy) %>
</div>